<div class="row">
  <div class="col-md-4 offset-md-4" style="text-align: center">
    <%= form_for(filtro, html: {class: "form-signin"}) do |f| %>

      <% if filtro.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(filtro.errors.count, "error") %> prohibited this filtro from being saved:</h2>

          <ul>
          <% filtro.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <h2>Filtro</h2>
      <br>
      <div class="field">
        <%= f.label :empresa_filtro, class: 'sr-only' %>
        <%= f.text_field :empresa_filtro, class: 'form-control', placeholder: 'Credencial de la empresa' %>
      </div>
      <br>
      <em>DD-MM-AAAA</em>
      <div class="field">
        <%= f.label :fechainicio_filtro, class: 'sr-only' %>
        <%= f.text_field :fechainicio_filtro, class: 'form-control', placeholder: 'Fecha inicial' %>
      </div>
      <br>
      <div class="field">
        <%= f.label :fechafin_filtro, class: 'sr-only' %>
        <%= f.text_field :fechafin_filtro, class: 'form-control', placeholder: 'Fecha final' %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Enviar", class: 'btn btn-lg btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
