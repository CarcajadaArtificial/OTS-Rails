<%= render 'layouts/navbar' %>
<% if current_user && current_user.AdminStatus? %>

<div class="row">
  <div class="col-md-4 offset-md-4" style="text-align: center">

    <h2>Crear cuenta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :nombre_user, class: 'sr-only' %><br />
        <%= f.text_field :nombre_user, autofocus: true, class: 'form-control', placeholder: 'Nombre Completo' %>
      </div>
      <div class="field">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.text_field :telefono_user, class: 'form-control', placeholder: 'Telefono' %>
      </div>
      <div class="field">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.text_field :estado_user, class: 'form-control', placeholder: 'Estado' %>
      </div>
      <div class="field">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.text_field :ciudad_user, class: 'form-control', placeholder: 'Ciudad' %>
      </div>

      <div class="field">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.email_field :email, class: 'form-control', placeholder: 'Correo electrónico' %>
      </div>

      </br>
      <div class="field">
        <%= f.label :password, class: 'sr-only' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'sr-only' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirmación contraseña' %>
      </div>

      </br>
      <em>Administrador</em>
      <div class="field">
        <%= f.label :AdminStatus, class: 'sr-only' %><br />
        <%= f.check_box :AdminStatus, class: 'form-control', placeholder: 'Admin?' %>
      </div>

      </br>
      </br>
      <em>Llenar con: "cliente" o "tercero". (Sin comillas)</em>
      <div class="field">
        <%= f.label :rol_user, class: 'sr-only' %><br />
        <%= f.text_field :rol_user, autofocus: true, class: 'form-control', placeholder: 'Rol' %>
      </div>
      </br>
      <em>Únicamente para cuentas de clientes</em>
      <div class="field">
        <%= f.label :credencialcliente_user, class: 'sr-only' %><br />
        <%= f.text_field :credencialcliente_user, autofocus: true, class: 'form-control', placeholder: 'Credencial de cliente' %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Crear", class: 'btn btn-lg btn-primary' %>
      </div>
      </br>
    <% end %>


  </div>
</div>
<% else %>
  <%= render 'layouts/error' %>
  <% end %>
