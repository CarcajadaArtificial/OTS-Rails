<%= render 'layouts/navbar' %>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10 offset-md-1">
    <h2 style="text-align:center">Recibos</h2>

    <table class="table table-responsive">
      <thead>
        <tr>
          <th>Folio recibo</th>
          <th>Kilometraje anterior</th>
          <th>Kilometraje actual</th>
          <th>Combustible recibo</th>
          <th>Sobres aplicados</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @recibos.each do |recibo| %>
        <tr>
          <td><%= recibo.folio_recibo %></td>
          <td><%= recibo.kmanterior_recibo %></td>
          <td><%= recibo.kmactual_recibo %></td>
          <td><%= recibo.combustible_recibo %></td>
          <td></td>
          <td><%= link_to 'Show', recibo %></td>
          <td><%= link_to 'Edit', edit_recibo_path(recibo) %></td>
          <td><%= link_to 'Destroy', recibo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>
